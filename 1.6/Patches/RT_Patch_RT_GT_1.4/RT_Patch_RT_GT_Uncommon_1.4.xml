<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
    <mods>
      <li>RimTraits - General Traits</li> <!-- Checks for this mod, if not active there is no reason to add values -->
    </mods>
    <match Class="PatchOperationSequence">
	    <operations>

				<li Class="PatchOperationReplace">
					<xpath>/Defs/TraitDef[defName="RT_Coordinated"]/degreeDatas/li[label="coordinated"]/label</xpath>
