<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Medieval Overhaul</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationReplace">
          <xpath>/Defs/TraitDef[defName="DankPyon_Fighter"]/degreeDatas/li[label="fighter"]/label</xpath>
          <value>
            <label>&lt;color=#d4af37&gt;fighter&lt;/color&gt;</label>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>/Defs/TraitDef[defName="DankPyon_Veteran"]/degreeDatas/li[label="veteran"]/label</xpath>
          <value>
            <label>&lt;color=#d4af37&gt;veteran&lt;/color&gt;</label>
          </value>
        </li>
      </operations>
    </match>
  </Operation>

</Patch>
