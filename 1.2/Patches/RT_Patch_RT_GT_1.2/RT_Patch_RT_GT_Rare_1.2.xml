<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
    <mods>
      <li>RimTraits - General Traits</li> <!-- Checks for this mod, if not active there is no reason to add values -->
    </mods>
    <match Class="PatchOperationSequence">
	    <operations>

				<li Class="PatchOperationReplace">
					<xpath>/Defs/TraitDef[defName="RT_Gifted"]/degreeDatas/li[label="gifted"]/label</xpath>
			    <value>
			      <label>&lt;color=#9f40ff&gt;gifted&lt;/color&gt;</label>
			    </value>
				</li>

	       <li Class="PatchOperationReplace">
					 <xpath>/Defs/TraitDef[defName="RT_Incompetent"]/degreeDatas/li[label="incompetent"]/label</xpath>
			     <value>
			       <label>&lt;color=#9f40ff&gt;incompetent&lt;/color&gt;</label>
			     </value>
			  </li>

	       <li Class="PatchOperationReplace">
					 <xpath>/Defs/TraitDef[defName="RT_PatientCook"]/degreeDatas/li[label="patient cook"]/label</xpath>
			     <value>
			       <label>&lt;color=#9f40ff&gt;patient cook&lt;/color&gt;</label>
			     </value>
			  </li>

	       <li Class="PatchOperationReplace">
					 <xpath>/Defs/TraitDef[defName="RT_ImpatientCook"]/degreeDatas/li[label="impatient cook"]/label</xpath>
			     <value>
			       <label>&lt;color=#9f40ff&gt;impatient cook&lt;/color&gt;</label>
			     </value>
			  </li>

	       <li Class="PatchOperationReplace">
					 <xpath>/Defs/TraitDef[defName="RT_Healthy"]/degreeDatas/li[label="healthy"]/label</xpath>
			     <value>
			       <label>&lt;color=#9f40ff&gt;healthy&lt;/color&gt;</label>
			     </value>
			  </li>

	       <li Class="PatchOperationReplace">
					 <xpath>/Defs/TraitDef[defName="RT_ChronicallyIll"]/degreeDatas/li[label="chronically ill"]/label</xpath>
			     <value>
			       <label>&lt;color=#9f40ff&gt;chronically ill&lt;/color&gt;</label>
			     </value>
			  </li>

	       <li Class="PatchOperationReplace">
					 <xpath>/Defs/TraitDef[defName="RT_TemperatureTolerant"]/degreeDatas/li[label="temperature tolerant"]/label</xpath>
			     <value>
			       <label>&lt;color=#9f40ff&gt;temperature tolerant&lt;/color&gt;</label>
			     </value>
			  </li>

	       <li Class="PatchOperationReplace">
					 <xpath>/Defs/TraitDef[defName="RT_TemperatureIntolerant"]/degreeDatas/li[label="temperature intolerant"]/label</xpath>
			     <value>
			       <label>&lt;color=#9f40ff&gt;temperature intolerant&lt;/color&gt;</label>
			     </value>
			  </li>


      </operations>
    </match>
  </Operation>
</Patch>
